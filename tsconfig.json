{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "outDir": "dist",
    "strict": false,
    // "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "lib": ["es2017", "dom", "dom.iterable"],
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "moduleResolution": "node",
    "typeRoots": ["./npm_modules/@types/", "./node_modules/@webgpu/types"]
  },
  "include": ["src"],
  "exclude": ["src/lib/hwoa-rang-gl/docs", "src/lib/hwoa-rang-gl/dist"]
}
