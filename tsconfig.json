{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    // "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["ES2016", "ES2017", "DOM"],
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "./dist/@types",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@webgpu/types",
      "./npm_modules/@types/"
    ]
  },
  "include": [
    "src/lib/hwoa-rang-gl",
  ],
  "exclude": [
    "src/lib/hwoa-rang-gl/docs",
    "src/lib/hwoa-rang-gl/dist"
  ]
}